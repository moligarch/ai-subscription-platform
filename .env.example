# ---------------------------------
# Variables for docker-compose*.yml
# ---------------------------------

# PostgreSQL Credentials
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=

# Grafana Admin Credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=

# ---------------------------------
# Variables for the Go Application
# ---------------------------------

# Telegram Bot Token
BOT_TOKEN=""

# Full PostgreSQL DSN for the Go app to connect to the Postgres container.
# The hostname 'postgres' is the service name from docker-compose.
DATABASE_URL="postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?sslmode=disable"

# Redis URL for the Go app to connect to the Redis container.
REDIS_URL="redis:6379"

# 32-byte (256-bit) AES encryption key. MUST be exactly 32 characters.
# Generate one with: openssl rand -base64 24
SECURITY_ENCRYPTION_KEY=""

# AI Provider API Keys
AI_OPENAI_API_KEY=""
AI_GEMINI_API_KEY=""

# Payment Provider Credentials
PAYMENT_ZARINPAL_MERCHANT_ID=""
PAYMENT_ZARINPAL_CALLBACK_URL=https://payment.yourdomain.com/api/payment/callback # Use your real domain

# API key for the admin panel backend
ADMIN_API_KEY=your-super-secret-and-long-api-key