{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Go App",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      // "program": "${fileDirname}",
      "program": "${workspaceFolder}/cmd/app/main.go",
      "args": ["--config", "${workspaceFolder}/config.yaml"],
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Debug Golang test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "buildFlags": "-tags=integration",
      "args": ["-test.run", "${selectedText}","-test.v"]
    }
  ]
}